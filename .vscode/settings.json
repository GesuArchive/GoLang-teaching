{
	"editor.detectIndentation": false,
	"editor.insertSpaces": false,
	"editor.rulers": [80],
	"editor.tabSize": 4,
    "editor.autoIndent": "full",
	"files.encoding": "utf8",
	"files.eol": "\r\n",
	"files.exclude": {
        "**/.git": false,
        "**/.svn": false,
        "**/.hg": false,
        "**/CVS": false,
        "**/.DS_Store": false,
        "**/Thumbs.db": false,
        "**/.classpath": false,
        "**/.project": false,
        "**/.settings": false,
        "**/.factorypath": false,
        "**/.github": false,
        "**/__debug_bin.exe": false
    },
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": false,
	"files.trimTrailingWhitespace": true,
	"gitlens.advanced.blame.customArguments": [
		"-w",
		"--ignore-revs-file",
		".git-blame-ignore-revs"
	],
	"workbench.editorAssociations": {
		"*.dmi": "imagePreview.previewEditor"
	},
	"gitlens.blame.avatars": true,
	"gitlens.blame.format": "${author|20} ${message|30?} ${ago|14-}",
	"gitlens.defaultGravatarsStyle": "retro",
	"gitlens.keymap": "none",
	"gitlens.views.fileHistory.enabled": true,
    "editor.mouseWheelScrollSensitivity": 2,
    "editor.smoothScrolling": true,
    "editor.wordWrap": "on",
    "git.autofetch": true,
    "gitlens.advanced.messages": {
		"suppressCommitHasNoPreviousCommitWarning": false,
		"suppressCommitNotFoundWarning": false,
		"suppressFileNotUnderSourceControlWarning": false,
		"suppressGitVersionWarning": false,
		"suppressLineUncommittedWarning": false,
		"suppressNoRepositoryWarning": false,
	},
	"workbench.iconTheme": "vscode-icons",
    "gitlens.gitExplorer.files.layout": "auto",
    "gitlens.historyExplorer.enabled": false,
    "gitlens.mode.active": "review",
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    "workbench.editor.enablePreview": true,
	"workbench.editor.enablePreviewFromQuickOpen": false,
    "activestate.promptRuntimeCreation": false,
}
